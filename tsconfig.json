{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",                                
    "module": "commonjs",                             
    "esModuleInterop": true,  
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }],                           
    "paths": {
      "@assets": ["assets/*"],
      "@pages": ["pages/*"],
    },   
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
  }
}
